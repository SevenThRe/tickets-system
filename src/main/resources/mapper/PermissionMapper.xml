  <!--  查询所有权限-->
  <select id="selectAllPermission" resultType="com.icss.etc.ticket.entity.Permission">
        <!--@mbg.generated-->
        select
        <include refid="Base_Column_List" />
        from t_permission
        <where>
            <if test="permissionId != null and permissionName !=''">
                and permission_id=#{permissionId,jdbcType=BIGINT}
            </if>
            <if test="permissionName != null and permissionName !=''">
                and permission_name=#{permissionName,jdbcType=VARCHAR}
            </if>
            <if test="permissionCode != null and permissionCode !=''">
                and permission_code=#{permissionCode,jdbcType=VARCHAR}
            </if>
            <if test="icon != null and icon !=''">
                and icon=#{icon,jdbcType=VARCHAR}
            </if>
            <if test="sort != null and sort !=''">
                and sort=#{sort,jdbcType=INTEGER}
            </if>
                and is_deleted=0
            <if test="createBy != null and createBy !=''">
                and create_by=#{createBy,jdbcType=BIGINT}
            </if>
            <if test="updateBy != null and updateBy !=''">
                and update_by=#{updateBy,jdbcType=BIGINT}
            </if>
            <if test="createTime != null and createTime !=''">
                and create_time=#{createTime,jdbcType=TIMESTAMP}
            </if>
            <if test="updateTime != null and updateTime !=''">
                and update_time=#{updateTime,jdbcType=TIMESTAMP}
            </if>
        </where>
    </select>
  
  
<!--  删除所有权限-->
  <update id="deletePermission" parameterType="com.icss.etc.ticket.entity.Permission">
    update t_permission set is_deleted=1
    where permission_id=#{permissionId}
  </update>
